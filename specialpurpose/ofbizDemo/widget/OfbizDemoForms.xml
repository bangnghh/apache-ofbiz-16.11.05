<?xml version="1.0" encoding="UTF-8"?>
<forms xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
        xmlns="http://ofbiz.apache.org/Widget-Form" xsi:schemaLocation="http://ofbiz.apache.org/Widget-Form http://ofbiz.apache.org/dtds/widget-form.xsd">

    <form name="FirstForm" type="single" target="processFirstForm">
        <field name="firstName"><text/></field>
        <field name="lastName"><text/></field>
        <field name="submit"><submit/></field>
    </form>

    <form name="ListForm" type="list" target="processListForm" list-name="listOfRecords" separate-columns="true">
        <field name="firstName"><text/></field>
        <field name="lastName"><text/></field>
        <field name="submit"><submit/></field>
    </form>

    <form name="MultiForm" type="multi" list-name="listOfRecords" separate-columns="true" target="processMultiForm">
        <field name="firstName"><text/></field>
        <field name="lastName"><text/></field>
        <field name="_rowSubmit" title="Select"><check/></field>
        <field name="submit"><submit/></field>
    </form>

    <form name="TwoTargetForm" type="single" target="updateRecord" default-map-name="record">
        <alt-target use-when="record==null" target="createRecord"/>
        <field name="firstName"><text/></field>
        <field name="lastName"><text/></field>
        <field name="submit"><submit/></field>
    </form>
</forms>